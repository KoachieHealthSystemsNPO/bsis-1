<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
  logicalFilePath="./liquibase/updates/1452-add-componentsContainingPlasmaForDiscard-to-bloodTest.xml">

	<changeSet id="20161010-1429" author="tmvumbi2">
		<addColumn tableName="BloodTest">
			<column name="flagComponentsContainingPlasmaForDiscard" type="TINYINT(1)" defaultValue="1">
				<constraints nullable="0" />
			</column>
		</addColumn>
		<sql>
			UPDATE BloodTest bt 
			SET bt.flagComponentsContainingPlasmaForDiscard = 1 
			WHERE bt.flagComponentsContainingPlasmaForDiscard IS NULL;
		</sql>
	</changeSet>

</databaseChangeLog>