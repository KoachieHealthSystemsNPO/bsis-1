<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.2.xsd">

  <!-- referenced in web.xml -->
  <!-- no authentication needed for static files -->
  <http pattern="/**/*.css" security="none" />
  <http pattern="/**/*.js" security="none" />
  <http pattern="/**/*.png" security="none" />

  <!-- Enable stateless access to REST services using Basic authentication -->
  <http pattern="/donor/**" create-session="never" use-expressions="true">
  	<http-basic />
    <session-management />
    <intercept-url pattern="/donor/**" access="isAnonymous()" method="OPTIONS"/>
    <intercept-url pattern="/donor/**" access="isFullyAuthenticated()" />
  </http>

