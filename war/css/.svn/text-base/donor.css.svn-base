#donorPanel {
    clear: both;
    padding: 0px 5px;
}

#donorDetails {
    width: 60%;
    float: left;
    margin-bottom: 10px;
}

#donorsTable {
    width: 100%;
    border: 3px outset #BAB6B8;
    border-collapse: collapse;
}

#donorsTable th {
    background-color: #C9C5C7;
}

#donorsTable th, td {
    border: 1px solid #BAB6B8;
    padding: 1px;
    font-weight: normal;
    text-align: center;
    width: 10%;
}

#donorChoices {
    padding-bottom: 20px;
}

#donorHistoryTable {
    border: 3px outset #BAB6B8;
    border-collapse: collapse;
    margin: 20px 0 0 1px;
    width: 871px;
}

#donorHistoryTable th, td {
    border: 1px solid #BAB6B8;
    padding: 1px;
    font-weight: normal;
    text-align: center;
    width: 10%;
}

#donorHistoryTable th {
    background-color: #C9C5C7;
}

